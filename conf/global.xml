<?xml version="1.0" encoding="UTF-8"?>

<config version="1.0">
    <!-- 配置服务相关信息 -->
    <service>
        <!-- 配置服务存储路径相关信息 -->
        <path>
            <!-- 服务根目录 -->
            <param name="service_root"   value="/dipcc" />
			<!--freeswitch相关配置-->
			<freeswitch>
			    <!--freeswitch脚本路径-->
			    <param name="fs_scripts_path" value="/dipcc/scripts/fs-conf" />
				<!--freeswitch配置文件路径-->
			    <param name="fs_config_path" value="/usr/local/freeswitch/conf" />
			</freeswitch>
        </path>
    </service>

    <!-- 心跳相关配置 -->
    <heartbeat>
    	<!-- 心跳间隔3-10 -->
    	<param name="interval" value="3"/>
    	<!-- 最大失败次数 10-15 -->
    	<param name="max_fail_cnt" value="10"/>
    	<param name="treatment" value="0" />
    </heartbeat>

    <!--数据库配置-->
    <mysql>
        <!--数据库主机-->
        <param name="host" value="localhost"/>
        <!--数据库连接端口-->
        <param name="port" value="3306"/>
        <!--ccsys数据库连接用户名-->
        <param name="username" value="ccsys"/>
        <!--ccsys业务数据库库名-->
        <param name="dbname" value="ccsys"/>
        <!--ccsys数据库连接用户密码-->
        <param name="password" value="KfcCQf88NKHsdPzp"/>
        <!--资源监控数据库用户名-->
        <param name="src_username" value="syssrc"/>
	    <!--系统资源数据库名-->
	    <param name="src_dbname" value="syssrc"/>
        <!--资源监控数据库密码-->
        <param name="src_password" value="LLyK60ehUVdW6toN" />
		<!--mysql数据库的socket文件路径-->
		<param name="sockpath" value="/tmp/mysql.sock" />
    </mysql>
    <!-- 日志模块配置 -->
    <!-- level 值的范围
         0 - LOG_LEVEL_EMERG
         1 - LOG_LEVEL_ALERT,
         2 - LOG_LEVEL_CIRT,
         3 - LOG_LEVEL_ERROR,
         4 - LOG_LEVEL_WARNING,
         5 - LOG_LEVEL_NOTIC,
         6 - LOG_LEVEL_INFO,
         7 - LOG_LEVEL_DEBUG,

	 8 - LOG_LEVEL_INVAILD
    -->
    <log>
    	<console>
    	    <param name="leval" value=""/>
    	</console>
    	<db>
    	    <param name="leval" value=""/>
    	</db>
    </log>
    <pts>
        <!--pts 服务器端口-->
        <param name="pts_port" value="50000"/>
		<!--goahead server端口-->
        <param name="web_server_port" value="9001"/>
        <!--pts web server端口-->
        <param name="proxy_port" value="55000"/>
        <!--pts 服务器端口-->
        <param name="telnet_server_port" value="54000"/>
    </pts>
    <!--ptc配置-->
    <ptc>
        <!--pts 域名-->
        <param name="pts_major_domain" value="172.16.100.251"/>
        <param name="pts_minor_domain" value="www.dipcc.com"/>
        <!--pts 端口-->
        <param name="pts_major_port" value="50000"/>
        <param name="pts_minor_port" value="50000"/>
        <!--ptc 名称-->
        <param name="ptc_name" value="ptc11"/>
    </ptc>
	
	<!--ctrl-panel模块Fn快捷键支持-->
	<shortcut>
		<!-- 1~10分别代表F1~F10 -->
		<param name="1"  value=""/>
		<param name="2"  value=""/>
		<param name="3"  value=""/>
		<param name="4"  value=""/>
		<param name="5"  value=""/>
		<param name="6"  value=""/>
		<param name="7"  value=""/>
		<param name="8"  value=""/>
		<param name="9"  value=""/>
		<param name="10" value=""/>
	</shortcut>
</config>
