<?xml version="1.0" encoding="UTF-8"?>

<config version="1.0">
    <!-- 配置服务相关信息 -->
    <service>
        <!-- 配置服务存储路径相关信息 -->
        <path>
            <!-- 服务根目录 -->
            <param name="service_root" value="/tcom" />
			<param name="fs_scripts_path" value="/root/bubble/res_monitor/sdk/scripts/freeswitch/pyscripts" /><!--脚本路径-->
			<param name="fs_config_path"  value="/root/bubble/res_monitor/sdk/scripts/freeswitch/cfg" /><!--freeswitch配置文件路径-->
        </path>
    </service>

    <!-- 心跳相关配置 -->
    <heartbeat>
    	<!-- 心跳间隔3-10 -->
    	<param name="interval" value="3" />
    	<!-- 最大失败次数 10-15 -->
    	<param name="max_fail_cnt" value="10" />
    	<param name="treatment" value="0" />
    </heartbeat>

    <!--数据库配置-->
    <mysql>
        <!--数据库主机-->
        <param name="host" value="192.168.1.125" />
        <!--数据库连接端口-->
        <param name="port" value="3306" />
        <!--数据库连接用户名-->
        <param name="username" value="root" />
        <!--数据库连接用户密码-->
        <param name="password" value="admin" />
        <!--数据库库名-->
        <param name="dbname" value="billing_new" />
		<!--数据库名-->
		<param name="database" value=""/>
    </mysql>
    <!-- 日志模块配置 -->
    <!-- level 值的范围
         0 - LOG_LEVEL_EMERG
         1 - LOG_LEVEL_ALERT,
         2 - LOG_LEVEL_CIRT,
         3 - LOG_LEVEL_ERROR,
         4 - LOG_LEVEL_WARNING,
         5 - LOG_LEVEL_NOTIC,
         6 - LOG_LEVEL_INFO,
         7 - LOG_LEVEL_DEBUG,

	 8 - LOG_LEVEL_INVAILD
    -->
    <log>
    	<console>
    	    <param name="leval" value="" />
    	</console>
    	<db>
    	    <param name="leval" value="" />
    	</db>
    </log>
    <!--freeswitch数据库配置-->
    <fs_db>
       <!--freeswitch数据库主机ip-->
       <param name="host"     value="172.16.99.100"/>
       <!--数据库用户名-->
       <param name="username" value="root"/>
       <!--密码-->
       <param name="password" value="admin"/>
       <!--端口号-->
       <param name="port"     value="3306"/>
       <!--数据库名称-->
       <param name="db_name"  value="ccsys"/>
       <!--freeswitch配置文件根路径-->
       <param name="cfg_path" value="../conf"/>
    </fs_db>    <!--pts配置-->
    <pts>
        <!--pts 服务器端口-->
        <param name="pts_port" value="50000" />
	<!--goahead server端口-->
        <param name="web_server_port" value="9000" />
        <!--pts web server端口-->
        <param name="proxy_port" value="55000" />
        <!--pts 服务器端口-->
        <param name="telnet_server_port" value="54000" />
    </pts>
    <!--ptc配置-->
    <ptc>
        <!--pts 域名-->
        <param name="pts_major_domain" value="172.16.100.251" />
        <param name="pts_minor_domain" value="www.dipcc.com" />
        <!--pts 端口-->
        <param name="pts_major_port" value="50000" />
        <param name="pts_minor_port" value="50000" />
        <!--ptc 名称-->
        <param name="ptc_name" value="ptc11" />
    </ptc>
	<!--Python脚本路径配置-->
	<py_path>
	   <param name="path" value="../scripts/freeswitch/pyscripts/freeswitch/"/>
	</py_path>
</config>
